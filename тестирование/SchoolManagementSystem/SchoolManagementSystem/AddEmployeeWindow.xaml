<Window x:Class="SchoolManagementSystem.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Employee" Height="300" Width="400">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,30,0,0" Width="200"/>
        <Label Content="Position" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,70,0,0"/>
        <TextBox x:Name="PositionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,70,0,0" Width="200"/>
        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,110,0,0"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,110,0,0" Width="200"/>
        <Button Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,150,0,0" Width="200" Click="AddButton_Click"/>
    </Grid>
</Window>
