<Window x:Class="SchoolManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="10">
        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,40,0,0"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,40,0,0" Width="200"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,90,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,90,0,0" Width="200"/>
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,140,0,0" Width="200" Click="LoginButton_Click"/>
        <Button Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,180,0,0" Width="200" Click="RegisterButton_Click"/>
    </Grid>
</Window>
